<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg2">
    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:id="@+id/cardView">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="20dp"
            android:background="@drawable/login_weixin"
            android:layout_alignEnd="@+id/cardView"
            android:layout_alignRight="@+id/cardView"
            android:layout_alignTop="@+id/cardView"
            android:layout_gravity="center"
            android:src="@drawable/login_icon" />
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/login_weixin"
        android:layout_alignParentBottom="true"
        android:text="微信登录"
        android:id="@+id/login_weixin"
        android:textColor="@color/commom_textcolor2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/login_qq"
        android:text="QQ登录"
        android:id="@+id/login_qq"
        android:textColor="@color/commom_textcolor2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="账号登录"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/login_user"
        android:id="@+id/login_zh"
        android:textColor="@color/commom_textcolor2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/commom_textcolor"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:text="登录代表你已经同意西瓜英语用户协议和隐私政策"/>
</RelativeLayout>