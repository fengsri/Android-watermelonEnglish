<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shouye_bg2"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/home_cardview"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#f7f4bf"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日单词"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/commom_textcolor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/home_todaycount"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/home_todaycount"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复习单词"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/commom_textcolor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/home_reviewcount"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/home_reviewcount"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="120dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四级词汇"
                    android:id="@+id/home_leveltext"
                    android:layout_margin="22dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="修改计划"
                    android:gravity="center"
                    android:background="@drawable/home_xiugaijihua"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ab9645"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已学完"
                    android:layout_margin="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/home_wordcount_text"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="17dp"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / 790"
                    android:id="@+id/home_wordallcount_text"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="17dp"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/leibiao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单词列表"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="20dp"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:progress="0"
                    android:max="100"
                    android:id="@+id/home_progressbar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_cardview"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日需新学习"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/home_wordcount_new"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="/"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/home_wordcount_text2"
            android:text="15"/>
    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="开始背单词吧"
        android:textSize="18sp"
        android:textColor="@color/commom_textcolor2"
        android:background="#3b77bf"
        android:gravity="center"
        android:id="@+id/home_recite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="开始复习"
        android:textSize="18sp"
        android:textColor="@color/commom_textcolor2"
        android:background="#1ab795"
        android:gravity="center"
        android:id="@+id/home_review"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="开始练习"
        android:textSize="18sp"
        android:textColor="@color/commom_textcolor2"
        android:background="#48b960"
        android:gravity="center"
        android:id="@+id/home_practice"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>