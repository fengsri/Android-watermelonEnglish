<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/review_recyclerview_cardview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/review_recyclerview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/practice_header2" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/review_recyclerview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/review_recyclerview_cardview"
            android:text="2018年四川省四级填空题"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/review_recyclerview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_recyclerview_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/review_recyclerview_cardview"
            android:text="2019年9月10日"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/review_recycler_fuxi"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/practice_item_bg"
            android:gravity="center"
            android:text="复习"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/review_recyclerview_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/review_recyclerview_shareimage"
            android:layout_toRightOf="@+id/review_recyclerview_date"
            android:src="@drawable/review_share" />

        <TextView
            android:id="@+id/review_recyclerview_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_recyclerview_title"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/review_recyclerview_date"
            android:text="分享" />

        <ImageView
            android:id="@+id/review_recyclerview_shoucang"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/review_recyclerview_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/review_recyclerview_share"
            android:src="@drawable/review_shoucang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_recyclerview_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/review_recyclerview_shoucangtext"
            android:layout_toRightOf="@+id/review_recyclerview_shoucang"
            android:text="收藏" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#cccccb" />
    </RelativeLayout>
</RelativeLayout>